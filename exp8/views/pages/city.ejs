<%- include("../includes/header") %>

<div class="container my-5">
    <div class="row">
        <div class="col-md-12">
            <form action="/city/search" method="post">

                <div>
                    Sort <select name="sortby">
                        <option>Sort By</option>
                        <option>City Name (A-Z)</option>
                        <option>City Name (Z-A)</option>
                        <option>State Name (A-Z)</option>
                        <option>State Name (Z-A)</option>
                    </select>
                    <button type="submit" class="btn btn-info btn-sm">Go</button>
                </div>
            </form>
            <table class="table table-dark mt-2">
                <tr>
                    <th>S.No.</th>
                    <th>Name</th>
                    <th>State</th>
                </tr>
                <% result.forEach((value, index)=>{ %>
                    <tr>
                        <td><%= index+1 %></td>
                        <td><%= value.name %></td>
                        <td><%= value.state %></td>
                    </tr>
               <% }) %>
            </table>
        </div>
    </div>
</div>
</body>
</html>